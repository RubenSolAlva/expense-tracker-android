<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_item_image_view"
        android:layout_width="@dimen/icon_size_medium"
        android:layout_height="@dimen/icon_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_gym" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_item_name_text_view"
        android:layout_width="@dimen/variable"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        app:layout_constraintBottom_toTopOf="@id/main_item_time_text_view"
        app:layout_constraintEnd_toStartOf="@id/main_item_amount_text_view"
        app:layout_constraintStart_toEndOf="@id/main_item_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@android:string/unknownName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_item_time_text_view"
        android:layout_width="@dimen/variable"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:fontFamily="@font/poppins_italic"
        android:includeFontPadding="false"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_item_amount_text_view"
        app:layout_constraintStart_toEndOf="@id/main_item_image_view"
        app:layout_constraintTop_toBottomOf="@id/main_item_name_text_view"
        tools:text="@android:string/unknownName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_item_amount_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@android:string/unknownName" />

</androidx.constraintlayout.widget.ConstraintLayout>
